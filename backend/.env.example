# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/bug_ghost_ai

# LLM Configuration
LLM_PROVIDER=openai  # Options: openai, anthropic
LLM_API_KEY=your-api-key-here
LLM_MODEL=gpt-4-turbo-preview  # Or: claude-3-opus-20240229

# GitHub OAuth (Phase 2)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=http://localhost:8000/api/auth/github/callback

# JWT (optional for future auth)
JWT_SECRET=change-me-in-prod
JWT_ALGORITHM=HS256

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Optional: Rate limiting
MAX_REQUESTS_PER_MINUTE=10

# Sandbox (Docker-in-Docker)
# Leave empty for local Docker socket, or use tcp://dind:2375 for Compose
DOCKER_HOST=
